<!DOCTYPE html>
<html lang="{{site.locale}}">
{{>head}}

<body>
	<div class="container-fluid px-0">

		{{>header}}

		<main id="main" class="main" role="main" ui-view="main"></main>
		<script type="text/ng-template" id="partials/{{path}}/">
			<!-- BEGIN PARTIAL partials/{{path}}/index.html -->
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-12 col-lg-8">
						<ul class="list-unstyled">
							{{#each repos}}
								{{#unless fork}}
									<li class="media mb-3" offline>
										<div class="media-body align-self-center">
											<div class="media-heading h5">
												<a href="{{html_url}}">{{name}}</a>
											</div>
											<div class="subtitle h6">{{description}}</div>
											<div class="meta">
												<div class="d-inline mr-3">
													<div class="repo-language-color" style="background-color: {{lookup ../colors language}}"></div>
													&nbsp;{{language}}
												</div>
												<div class="d-inline mr-3">
													<i class="icon-star"></i> {{stargazers_count}}
												</div>
												<div class="d-inline mr-3">
													<i class="icon-fork"></i> {{forks_count}}
												</div>
												<div class="d-inline mr-3">
													Updated <time class="time" datetime="{{moment pushed_at "YYYY-MM-DD"}}">{{moment pushed_at "MMM Do YYYY"}}</time>
												</div>
											</div>
										</div>
									</li>
								{{/unless}}
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
			<!-- END PARTIAL -->
		</script>

		{{>footer bodyClasses="page-projects"}}

	</div>
</body>
</html>
