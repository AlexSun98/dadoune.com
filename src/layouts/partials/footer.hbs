<footer class="footer p-1 text-muted">
	<div class="container">
		<div class="row flex-items-xs-center">
			<div class="col-md-12 col-lg-8 text-xs-center">
				<ul class="list-inline m-0">
					{{#each site.social}}
						<li class="list-inline-item mx-1">
							<a class="icon" title="{{title}}" href="{{link}}">
								<i class="{{icon}}"></i>
							</a>
						</li>
					{{/each}}
				</ul>
				<small>
					<a href="https://github.com/ReedD/dadoune.com">This site is open source on GitHub!</a>
				</small>
				<br>
				<small class="copyright">&copy; 2012-{{moment now "YYYY"}} Reed Dadoune</small>
			</div>
		</div>
	</div>
</footer>

<script>
	var partialContent = document.getElementById('partials/{{path}}/').innerHTML;
	document.getElementById('main').innerHTML = partialContent;
	{{#if bodyClasses}}document.body.classList.add('{{bodyClasses}}');{{/if}}
	document.body.classList.add('[[bodyClasses]]');
	window.bodyClasses = '{{bodyClasses}}';
</script>

{{#if scripts}}
	{{#each scripts}}
		<script async src="/{{this}}"></script>
	{{/each}}
{{/if}}

{{#if site.analytics}}
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
		ga('create', '{{site.analytics}}', 'auto');
		ga('send', 'pageview');
	</script>
{{/if}}
